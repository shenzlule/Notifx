<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/l1"
        android:background="@color/black"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="35dp">
        <RelativeLayout
            android:id="@+id/textViewAll"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/status"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="All"
                android:textColor="@color/poppy"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/textViewMon"

            android:layout_marginHorizontal="2dp"
            android:padding="0dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Mon"
                android:textColor="@color/poppy"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/textViewTue"

            android:layout_toRightOf="@+id/status"
            android:layout_marginHorizontal="2dp"
            android:padding="0dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tue"
                android:textColor="@color/poppy"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/status"
            android:layout_marginHorizontal="2dp"
            android:id="@+id/textViewWed"

            android:padding="0dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Wed"
                android:textColor="@color/poppy"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/textViewThur"

            android:layout_marginHorizontal="2dp"
            android:padding="0dp"
            android:textAlignment="center"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thur"
                android:textColor="@color/poppy"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/textViewFri"

            android:layout_toRightOf="@+id/status"
            android:layout_marginHorizontal="2dp"
            android:padding="0dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Fri"
                android:textColor="@color/poppy"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:id="@+id/textViewWeekend"

            android:padding="0dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Weekend"
                android:textColor="@color/poppy"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </LinearLayout>






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForexNews"
        android:layout_below="@id/l1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/uclag_back"
        android:gravity="center"
        android:text="Refresh News"
        android:textColor="@color/poppy"

        android:textSize="8sp" />

</RelativeLayout>
