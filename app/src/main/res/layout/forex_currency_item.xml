<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:id="@+id/foreground_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/currency_pair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/poppy"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:text="Currency Pair"
                android:textSize="12sp" />

        </RelativeLayout>


        <TextView


            android:textAlignment="center"
            android:textColor="@color/suunyg_l"
            android:textSize="12sp"
            android:id="@+id/pending_mar"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/alertNumber"
            android:layout_gravity="center_horizontal"
            android:ellipsize="marquee"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:text="pending alerts pending alerts pending alerts pending alerts pending alerts pending alerts "
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:scrollHorizontally="true"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:singleLine="true"
            android:textStyle="italic" >
        </TextView>



        <TextView
            android:id="@+id/alertNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textStyle="bold"
            android:textSize="14sp" />



    </RelativeLayout>


</RelativeLayout>
